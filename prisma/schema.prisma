generator client {
  provider = "prisma-client"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Frequency {
  YEAR
  MONTH
  WEEK
  DAY
}

model Category {
  id Int @id @default(autoincrement())
  name String
  user_id Int
  budget_bases BudgetBase[]
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("category")
}

model BudgetBase {
  id Int @id @default(autoincrement())
  category Category @relation(fields: [category_id], references: [id])
  category_id Int
  amount Int
  memo String
  budgets Budget[]
  subscriptions Subscription[]
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("budget_base")
}


model Budget {
  id Int  @id @default(autoincrement())
  budget BudgetBase @relation(fields: [budget_base_id], references: [id])
  budget_base_id Int
  user_id Int
  date DateTime
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("budget")
}

model Subscription {
  id Int @id @default(autoincrement())
  budget BudgetBase @relation(fields: [budget_base_id], references: [id])
  budget_base_id Int
  user_id Int
  frequency Frequency @default(MONTH)
  day_order Int
  start_date DateTime
  end_date DateTime
  next_date DateTime?
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("subscription")
}
