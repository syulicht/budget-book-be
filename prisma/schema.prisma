generator client {
  provider = "prisma-client"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Frequency {
  YEAR
  MONTH
  WEEK
  DAY
}

model Category {
  id Int @id @default(autoincrement())
  name String
  userId Int
  budgetBases BudgetBase[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model BudgetBase {
  id Int @id @default(autoincrement())
  category Category @relation(fields: [categoryId], references: [id])
  categoryId Int
  amount Int
  memo String
  budgets Budget[]
  subscriptions Subscription[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


model Budget {
  id Int  @id @default(autoincrement())
  budget BudgetBase @relation(fields: [budgetBaseId], references: [id])
  budgetBaseId Int
  userId Int
  date DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Subscription {
  id Int @id @default(autoincrement())
  budget BudgetBase @relation(fields: [budgetBaseId], references: [id])
  budgetBaseId Int
  userId Int
  frequency Frequency @default(MONTH)
  dayOrder Int
  startDate DateTime
  endDate DateTime
  nextDate DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
